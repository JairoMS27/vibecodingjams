---
const sponsors = [
  {
    handle: '@boltdotnew',
    name: 'Bolt',
    logo: 'https://pbs.twimg.com/profile_images/1880702021122342912/fe9TlQqJ_400x400.jpg',
    twitter: 'https://twitter.com/boltdotnew'
  },
  {
    handle: '@coderabbitai',
    name: 'CodeRabbit AI',
    logo: 'https://pbs.twimg.com/profile_images/1850044644115300353/v5yaxM6N_400x400.jpg',
    twitter: 'https://twitter.com/coderabbitai'
  }
];
---

<section id="sponsors" class="py-20 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-4xl font-bold mb-12">Our Sponsors</h2>
    
    <div class="flex justify-center items-center gap-20 flex-wrap">
      {sponsors.map((sponsor) => (
        <a 
          href={sponsor.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="text-center group hover:scale-105 transition-transform duration-300"
        >
          <div class="w-40 h-40 mb-6 mx-auto">
            <img 
              src={sponsor.logo} 
              alt={`${sponsor.name} logo`}
              class="w-full h-full object-cover rounded-full shadow-lg group-hover:shadow-2xl transition-shadow duration-300"
            />
          </div>
          <p class="text-2xl font-semibold mb-2 text-purple-400 group-hover:text-purple-300 transition-colors">{sponsor.handle}</p>
          <p class="text-gray-400 group-hover:text-gray-300 transition-colors">{sponsor.name}</p>
        </a>
      ))}
    </div>
  </div>
</section>