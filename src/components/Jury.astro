---

<section id="jury" class="py-20 px-4 bg-gray-900">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12">Meet the Jury</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {juryMembers.map((member) => (
        <a 
          href={member.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-gray-800 p-6 rounded-lg text-center hover:bg-gray-800/80 transition-all duration-300 transform hover:scale-105 group"
        >
          <div class="w-32 h-32 mx-auto mb-6 rounded-full overflow-hidden">
            <img 
              src={member.photo} 
              alt={member.name}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
            />
          </div>
          <h3 class="text-2xl font-semibold mb-2 text-purple-400 group-hover:text-purple-300 transition-colors">{member.handle}</h3>
          <p class="text-gray-400 mb-1 group-hover:text-gray-300 transition-colors">{member.name}</p>
          <p class="text-purple-400 group-hover:text-purple-300 transition-colors">{member.role}</p>
        </a>
      ))}
    </div>
  </div>
</section>