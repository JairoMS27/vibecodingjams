    photo: 'https://pbs.twimg.com/profile_images/1882867567099809793/qTScdAu-_400x400.jpg'
  },
  {
    handle: '@mrdoob',
    name: 'Ricardo Cabello',
    role: 'Three.js Creator',
    twitter: 'https://twitter.com/mrdoob',
